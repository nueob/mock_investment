<script>
    function setCompetition() {
        var titles = $('#first-name-vertical').val();
        var content = $('#compet-content').val();
        var start = $('#start').val();
        var end = $('#end').val();
        var asset = $('#password-vertical').val();
        $.ajax({
            url: '/users/setCompetition',
            type: 'POST',
            data : {
                titles : titles,
                content : content,
                start : start,
                end : end,
                asset : asset
            },
            success : function(result) {
                alert('대회 설정이 완료 되었습니다.');
                location.reload();
            }
        })
    }
    function goToDetail(idx,start,end) {
        console.log(idx);
        location.href='/users/result?idx=' + idx + '&&start=' + start + '&&end=' + end;
    }
</script>